block vars
  - page_title = null

doctype html5
html
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      base(href=settings.url)
      title #{ page_title ? page_title+' - ':'' }  Proof Of Hodl

      link(href=settings.static_url+'/bootstrap/css/bootstrap.min.css', type='text/css', rel='stylesheet')
      link(href=settings.static_url+'/style.css', type='text/css', rel='stylesheet')

  body
    nav.navbar.navbar-default: .container
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
          span.sr-only Toggle navigation
          | #[span.icon-bar]#[span.icon-bar]#[span.icon-bar]

        a.navbar-brand(href=settings.url) Proof Of HODL

    block content

    .container
      p.text-center: small
        | built by #[a(href='https://www.bitrated.com/nadav') Nadav Ivgi] of #[a(href='https://www.bitrated.com/') Bitrated]
        |  for the #[a(href='http://hack.bitembassy.org/') TLV emBassy 2017 Hackathon]
        br
        |  keys never leave the browser &middot; no external scripts<br>
        |  #[strong testnet] &middot;
        |  #[a(href='https://github.com/shesek/proof-of-hodl') source] &middot;
        |  #[a(href='mailto:nadav+hodl.voting@bitrated.com') contact] &middot;
        |  #[a(href='https://www.docdroid.net/rzFKS1g/proof-of-hodl.pdf.html') slides]

    block scripts
