block vars
  - page_title = null
  - full_title = null
  - meta_desc = 'time-locked (CSV) voting for provable long-term bitcoin HODLers'
  - json_url = null

doctype html5
html
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      base(href=settings.url)

      - full_title = full_title || (page_title ? page_title+' â€“ ':'') + 'HODL.voting'
      title= full_title
      meta(name='description', content=meta_desc)
      meta(name='twitter:card', content='summary')
      meta(name='twitter:title', content=full_title)
      meta(name='twitter:description', content=meta_desc)

      link(href=settings.static_url+'/bootstrap/css/bootstrap.min.css', type='text/css', rel='stylesheet')
      link(href=settings.static_url+'/style.css', type='text/css', rel='stylesheet')

  body
    nav.navbar.navbar-default: .container
      .navbar-header
        a.navbar-brand(href=settings.url) HODL.voting

    block content

    footer.container
      p.menu
        | #[strong testnet] &middot;
        if json_url
          |  #[a(href=json_url) json] &middot;
        |  #[a(href='https://github.com/shesek/proof-of-hodl') source] &middot;
        |  #[a(href='mailto:nadav+hodl.voting@bitrated.com') contact] &middot;
        |  #[a(href='https://www.docdroid.net/rzFKS1g/proof-of-hodl.pdf.html') slides]
      p.note
        | built by #[a(href='https://www.bitrated.com/nadav') Nadav Ivgi] of #[a(href='https://www.bitrated.com/') Bitrated]
        |  for the #[a(href='http://hack.bitembassy.org/') TLV emBassy 2017 Hackathon]
        | <br>keys never leave the browser &middot; no external scripts

    block scripts
